<?xml version="1.0" encoding="UTF-8"?>
<datasources xmlns="http://www.jboss.org/ironjacamar/schema"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.jboss.org/ironjacamar/schema
        http://docs.jboss.org/ironjacamar/schema/datasources_1_0.xsd">

	<datasource jndi-name="jdbc/JavaEETutorial" pool-name="JavaEETutorialDerbyPool"
		enabled="true" use-ccm="false">
		<connection-url>jdbc:derby://localhost:1527/JavaEETutorial;create=true</connection-url>
		<driver>org.apache.derby</driver>
		<validation>
			<validate-on-match>false</validate-on-match>
			<background-validation>false</background-validation>
		</validation>
		<statement>
			<share-prepared-statements>false</share-prepared-statements>
		</statement>
	</datasource>

</datasources>